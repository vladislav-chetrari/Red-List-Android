<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/destinationCountries">

    <fragment
        android:id="@+id/destinationCountries"
        android:name="chetrari.vlad.rts.app.main.countries.CountriesFragment"
        android:label="Countries"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_destinationCountries_to_speciesListFragment"
            app:destination="@id/speciesListFragment"></action>
    </fragment>
    <fragment
        android:id="@+id/speciesListFragment"
        android:name="chetrari.vlad.rts.app.main.species.SpeciesListFragment"
        android:label="Species list"
        tools:layout="@layout/fragment_list">
        <argument
            android:name="country"
            android:defaultValue="@null"
            app:argType="chetrari.vlad.rts.data.network.model.Country"
            app:nullable="true" />
    </fragment>
</navigation>