<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:padding="@dimen/content_padding_medium">

    <chetrari.vlad.rts.app.widget.KeyValuePairView
        android:id="@+id/scientificName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:enlarged="true"
        app:keyText="@string/label_scientific_name" />

    <chetrari.vlad.rts.app.widget.KeyValuePairsParagraphView
        android:id="@+id/taxonomy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/label_taxonomy">

        <chetrari.vlad.rts.app.widget.KeyValuePairView
            android:id="@+id/kingdom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:keyText="@string/label_kingdom" />

        <chetrari.vlad.rts.app.widget.KeyValuePairView
            android:id="@+id/phylum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:keyText="@string/label_phylum" />

        <chetrari.vlad.rts.app.widget.KeyValuePairView
            android:id="@+id/bioClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:keyText="@string/label_class" />

        <chetrari.vlad.rts.app.widget.KeyValuePairView
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:keyText="@string/label_order" />

        <chetrari.vlad.rts.app.widget.KeyValuePairView
            android:id="@+id/family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:keyText="@string/label_family" />

        <chetrari.vlad.rts.app.widget.KeyValuePairView
            android:id="@+id/genus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:keyText="@string/label_genus" />

    </chetrari.vlad.rts.app.widget.KeyValuePairsParagraphView>

    <chetrari.vlad.rts.app.widget.ParagraphView
        android:id="@+id/taxonomicNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/label_taxonomic_notes" />

    <chetrari.vlad.rts.app.widget.ParagraphView
        android:id="@+id/justification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/label_justification" />

    <chetrari.vlad.rts.app.widget.ParagraphView
        android:id="@+id/geographicRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/label_geographic_range" />

    <chetrari.vlad.rts.app.widget.ParagraphView
        android:id="@+id/population"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/label_population" />

    <chetrari.vlad.rts.app.widget.ParagraphView
        android:id="@+id/habitatAndEcology"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/label_habitat_and_ecology" />

    <chetrari.vlad.rts.app.widget.ParagraphView
        android:id="@+id/threats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/label_threats" />

    <chetrari.vlad.rts.app.widget.ParagraphView
        android:id="@+id/conservationActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/label_conservation_actions" />

</LinearLayout>