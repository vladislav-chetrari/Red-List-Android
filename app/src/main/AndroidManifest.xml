<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chetrari.vlad.redlist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="chetrari.vlad.redlist.app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="chetrari.vlad.redlist.app.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="chetrari.vlad.redlist.app.welcome.WelcomeActivity" />
        <activity android:name="chetrari.vlad.redlist.app.main.MainActivity" />
        <activity android:name="chetrari.vlad.redlist.app.main.images.ImageGalleryActivity" />
    </application>

</manifest>
